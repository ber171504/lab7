<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Activities.QRFragment" android:id="@+id/constraintLayout">
    <SurfaceView
            android:layout_width="312dp"
            android:layout_height="415dp"
            android:id="@+id/camaraPreview"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.463" app:layout_constraintHorizontal_bias="0.493"/>
    <TextView
            android:text="Scanner de código QR"
            android:layout_width="268dp"
            android:layout_height="63dp"
            android:id="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/camaraPreview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="center" android:textSize="25sp"
            android:textColor="#FF5722" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.765"/>
    <TextView
            android:text="Enfocar cámara en código"
            android:layout_width="213dp"
            android:layout_height="44dp"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/camaraPreview" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.245" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>