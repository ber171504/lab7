<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Activities.InventoryFragment"
                                             android:id="@+id/constraintLayout">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
            android:layout_width="375dp"
            android:layout_height="451dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recyclerView"
            app:layout_constraintVertical_bias="0.363"/>
    <TextView
            android:text="INVENTARIO"
            android:layout_width="150dp"
            android:layout_height="41dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="25sp"
            android:textAlignment="center" android:background="#052196F3" android:textColor="#FF5722"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="sans-serif-condensed"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.655"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_input_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/addProductButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintVertical_bias="0.564" android:backgroundTint="#009688"/>

</android.support.constraint.ConstraintLayout>